@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="relative">
        <a href="#" class="text-white text-xl px-5">
            <i class="fas fa-bell"></i>
        </a>
    </div>
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <!-- Notification Bell (right-hand side) -->

        <div class="flex items-center space-x-4">
            <img src="https://via.placeholder.com/40" alt="Profile Image" class="w-10 h-10 rounded-full cursor-pointer">
            <a href="javascript:document.getElementById('logoutForm').submit()" class="text-white text-sm ">@User.Identity.GetUserName()</a>
        </div>

        @*<ul class="navbar-nav navbar-right">
