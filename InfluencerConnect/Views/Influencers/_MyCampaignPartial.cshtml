
@model IEnumerable<InfluencerConnect.Models.InfluencerCampaignsViewModel>

<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar  ">
    <div class="layout-container">
        <!-- Layout container -->
        <div class="layout-page">
            <!-- Content wrapper -->
            <div class="content-wrapper">
                <!-- Content -->
                <div class="container-xxl flex-grow-1 container-p-y">
                    <div class="row g-6">

                        <!-- Basic Bootstrap Table -->
                        <div class="card">
                            <h5 class="card-header">My Campaigns</h5>
                            <div class="table-responsive text-nowrap">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Campaign Title</th>
                                            <th>Agent Name</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-border-bottom-0">
                                        @if (Model.Count() > 0)
                                        {
                                            foreach (var campaign in Model)
                                            {
                                                <tr>
                                                    <td>@campaign.CampaignTitle</td>
                                                    <td>@campaign.AgentName</td>
                                                    <td>@campaign.StartDate.ToString("dd MMM yyyy")</td>
                                                    <td>@campaign.EndDate.ToString("dd MMM yyyy")</td>
                                                    @if (campaign.EndDate > DateTime.Now)
                                                    {
                                                        <td><span class="badge bg-label-primary me-1">Active</span></td>
                                                    }
                                                    else
                                                    {
                                                        <td><span class="badge bg-label-primary me-1">Expired</span></td>
                                                    }
                                                    <td>
                                                        <button class="btn btn-sm btn-success " onclick="window.location.href='/Chats/StartChatfronNotification?targetUserId=@campaign.AgentId'">Chat</button>
                                                        <button class="btn btn-sm btn-dark " onclick="window.location.href='/CampaignMessages/GoToCampaignDetailsFromMsg?campaignMsgId=@campaign.CampaignMsgId'" >Details</button>
                                                    </td>
                                                </tr>
                                            }

                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="6" class="text-center text-muted">
                                                    You currently have no campaigns.
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--/ Basic Bootstrap Table -->

                    </div>
                </div>
                <!-- / Content -->

                <div class="content-backdrop fade"></div>
            </div>
            <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
    </div>
    <!-- Overlay -->
</div>
<!-- / Layout wrapper -->
