<!-- Sign In -->
<section class="inflanar-signin pd-top-120 pd-btm-120">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="inflanar-signin__body">
                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <div class="inflanar-signin__logins">
                                <!-- Login header -->
                                <div class="inflanar-signin__header mg-btm-10">
                                    <div class="inflanar-signin__heading">
                                        <h4 class="inflanar-signin__title">SignUp</h4>
                                        <p class="inflanar-signin__tag">Welcome to Influencer Connect</p>
                                    </div>
                                    <div class="inflanar-signin__heading__options">
                                        <!--Tab Nav -->
                                        <div class="list-group inflanar-signin__options" id="list-tab" role="tablist">
                                            <a class="list-group-item active" data-bs-toggle="list" href="#in-tab11" role="tab">
                                                <span> Influencer</span>
                                            </a>

                                        </div>
                                    </div>
                                </div>
                                <!-- End Login header -->

                                <div class="tab-content" id="nav-tabContent">

                                    <!-- Single Tab Influencer -->
                                    <div class="tab-pane fade active show" id="in-tab11" role="tabpanel">
                                        <div class="inflanar-signin__inner">

                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="form-group inflanar-form-input mg-top-20">
                                                        <label>Instagram</label>
                                                        <input class="ecom-wc__form-input" id="instagram-link" type="text" name="" placeholder="Enter your Instagram Link" required="required">
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-group inflanar-form-input mg-top-20">
                                                        <label>TikTok</label>
                                                        <input class="ecom-wc__form-input" id="tiktok-link" type="text" name="" placeholder="Enter your TikTok Link" required="required">
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-group inflanar-form-input mg-top-20">
                                                        <label>YouTube</label>
                                                        <input class="ecom-wc__form-input" id="youtube-link" type="text" name="" placeholder="Enter your YouTube Link" required="required">
                                                    </div>
                                                </div>
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <br />
                                                <div class="form-group mg-top-40">
                                                    <button id="save-socials" type="submit" class="inflanar-btn"><span>Done</span></button>
                                                </div>
                                            </div>
                                            <!-- End Single Tab -->

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12 d-none d-lg-block">
                            <div class="inflanar-signin__welcome inflanar-bg-cover inflanar-section-shape18">
                                <img src="~/Content/Images/in-account-cover.png" alt="#">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Sign In -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $(document).ready(function () {




            $(document).on('click', '#save-socials', function () {
                var instagramLink = $('#instagram-link').val();
                var tiktokLink = $('#tiktok-link').val();
                var youtubeLink = $('#youtube-link').val();
                $.ajax({
                    url: '/Account/SaveSocials?instagramLink=' + instagramLink + '&tiktokLink=' + tiktokLink + '&youtubeLink=' + youtubeLink,  // your backend API to start/get chat
                    type: 'POST',             // or 'POST' if you prefer

                    success: function (response) {
                        // Assuming backend returns success status or similar
                        if (response.success) {

                            // Redirect to chat index page to load all chats
                            window.location.href = '/Home';
                        } else {
                            alert("Failed to Save Socials.");
                        }
                    },
                    error: function () {
                        alert("Error while starting chat.");
                    }
                });
            });

        });
    </script>


}

